<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zipper.safetaxi.LoginActivity">

    <Button
        android:id="@+id/login3"
        android:layout_width="100dp"
        android:layout_height="50dp"

        android:layout_marginTop="30dp"
        android:background="@drawable/bt_login"
        android:onClick="onAuth"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="402dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/reg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/bt_loginmail"
        android:onClick="regis"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="457dp"
        android:layout_below="@+id/login3"
        android:layout_alignLeft="@+id/google"
        android:layout_alignStart="@+id/google" />
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"

        android:orientation="horizontal"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginBottom="53dp"
        android:id="@+id/linearLayout2"
        android:weightSum="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2">

    </LinearLayout>

    <Button
        android:id="@+id/google"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/bt_gmail"
        android:visibility="visible" />

    <Button
        android:id="@+id/closegg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/bt_gmail"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/id"
        android:layout_width="189dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/reg"
        android:layout_alignRight="@+id/reg"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:background="@drawable/text"
        android:ems="10"
        android:hint="  อีเมล์"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="189dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/id"
        android:layout_alignStart="@+id/id"
        android:layout_alignTop="@+id/linearLayout"
        android:background="@drawable/text"
        android:ems="10"
        android:hint="  รหัสผ่าน"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="198dp" />



</RelativeLayout>
